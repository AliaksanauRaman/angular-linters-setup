# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
# Is used as "printWidth" option of the prettier config
max_line_length = 80
# Is used as "tabWidth" option of the prettier config
indent_size = 2
# Is used as "useTabs" option of the prettier config
indent_style = space
# Is used as "endOfLine" option of the prettier config
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
