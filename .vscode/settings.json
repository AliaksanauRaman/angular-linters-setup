{
	"prettier.configPath": ".prettierrc.json",
	"[typescript][html][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"cSpell.words": [
		"devkit",
		"focusring",
		"necolas",
		"stylelint"
	],
	"stylelint.configFile": ".stylelintrc.json",
	"stylelint.enable": true,
	"css.validate": false,
	"scss.validate": false
}
